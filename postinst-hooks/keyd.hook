# Add keyd to groups + enable keyd systemd service if not running in a chroot
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = keyd

[Action]
When = PostTransaction
Exec = /bin/bash -c "groupadd keyd; if [ -f /proc/mounts ]; then systemctl enable --now keyd.service; else systemctl enable keyd.service; fi"