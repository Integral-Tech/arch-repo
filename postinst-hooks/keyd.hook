# Add keyd to groups + enable keyd systemd service if not running in a chroot
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = keyd

[Action]
When = PostTransaction
Exec = /bin/bash -c "groupadd keyd && /usr/lib/eupnea/set-keymap --automatic && systemctl enable keyd.service && systemd-detect-virt -r || systemctl start keyd.service" # systemd-detect-virt -r returns 1 if not in a chroot