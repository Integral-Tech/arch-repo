# Enable depthboot boot splash systemd service and start it if not in a chroot
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = depthboot-logo

[Action]
When = PostTransaction
Exec = /bin/bash -c "systemctl enable eupnea-boot-splash.service && systemd-detect-virt -r || systemctl start eupnea-boot-splash.service" # systemd-detect-virt -r returns 1 if not in a chroot